<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:layout_width="351dp"
        android:layout_height="65dp"
        android:layout_marginTop="120dp"
        app:layout_constraintEnd_toEndOf="@+id/progressBar"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="@+id/progressBar"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/et_add_steps"
            android:layout_width="123dp"
            android:layout_height="44dp"
            android:layout_centerInParent="true"
            android:layout_marginStart="98dp"
            android:layout_marginBottom="12dp"
            android:ems="10"
            android:textAlignment="center"
            android:hint="Add steps"
            android:inputType="number" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton

            android:id="@+id/btn_add_steps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="36dp"
            android:layout_toEndOf="@+id/et_add_steps"
            android:tint="@color/cardview_light_background"
            app:srcCompat="@android:drawable/ic_input_add" />
    </RelativeLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="132dp"
        android:progress="90"
        android:progressDrawable="@drawable/circle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_home" />




    <TextView
        android:id="@+id/tv_goal_percentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:text="90%"
        android:textSize="50dp"
        app:layout_constraintEnd_toEndOf="@+id/progressBar"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="@+id/progressBar"
        app:layout_constraintTop_toTopOf="@+id/progressBar" />

    <TextView
        android:id="@+id/tv_home_steps_taken"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Steps: 2552"
        app:layout_constraintEnd_toEndOf="@+id/progressBar"
        app:layout_constraintStart_toStartOf="@+id/progressBar"
        app:layout_constraintTop_toBottomOf="@+id/tv_goal_percentage" />


    <RelativeLayout
        android:layout_width="342dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        app:layout_constraintEnd_toEndOf="@+id/progressBar"
        app:layout_constraintHorizontal_bias="0.64"
        app:layout_constraintStart_toStartOf="@+id/progressBar"
        app:layout_constraintTop_toBottomOf="@+id/progressBar">


        <TextView
            android:id="@+id/tv_active_goal_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_history_goal"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="12dp"
            android:text="Active goal: "

            />

        <TextView
            android:id="@+id/tv_active_goal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_active_goal_label"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="12dp"
            android:text="Iron Man"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"

            />

        <ImageView
            android:id="@+id/iv_change_active_goal"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@+id/tv_active_goal_label"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="13dp"
            android:layout_toEndOf="@id/tv_active_goal"
            android:src="@drawable/ic_edit_circle"
            app:layout_constraintStart_toEndOf="@+id/tv_active_goal"
            tools:layout_editor_absoluteY="417dp" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>