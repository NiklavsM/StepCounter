<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.history.AddEditHistoryFragment">


    <EditText
        android:id="@+id/et_history_add_steps"
        android:layout_width="94dp"
        android:layout_height="43dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="numberSigned"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:hint="Add steps"
        app:layout_constraintTop_toBottomOf="@+id/btn_set_current_goal_history" />

    <TextView
        android:id="@+id/tv_history_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="01/02/2020" />

    <Button
        android:id="@+id/btn_select_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="144dp"
        android:text="Select date"
        app:layout_constraintBottom_toBottomOf="@+id/tv_history_date"
        app:layout_constraintStart_toEndOf="@+id/tv_history_date"
        app:layout_constraintTop_toTopOf="@+id/tv_history_date"
        app:layout_constraintVertical_bias="0.31" />

    <TextView
        android:id="@+id/tv_active_goal_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@+id/tv_history_date"
        app:layout_constraintTop_toBottomOf="@+id/tv_history_date"
        tools:text="Iron man" />

    <Button
        android:id="@+id/btn_set_current_goal_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change"
        app:layout_constraintStart_toStartOf="@+id/btn_select_date"
        app:layout_constraintTop_toTopOf="@+id/tv_active_goal_history" />

    <Button
        android:id="@+id/btn_add_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="164dp"
        android:layout_marginTop="28dp"
        android:text="Add"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_history_add_steps" />

    <ImageView
        android:id="@+id/iv_delete_history"
        android:layout_width="39dp"
        android:layout_height="37dp"
        android:layout_marginEnd="4dp"
        android:src="@drawable/ic_delete"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>